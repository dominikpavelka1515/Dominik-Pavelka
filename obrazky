import turtle

def draw_neon_spiral():
    """
    Funkce vykreslí neonovou spirálu na černém pozadí.
    """
    # Nastavení obrazovky
    screen = turtle.Screen()
    screen.setup(width=800, height=800)
    screen.bgcolor('black')
    screen.title("Neon Turtle Spiral")

    # Nastavení želvy
    t = turtle.Turtle()
    t.speed(0)  # 0 = nejrychlejší možná
    t.hideturtle() # Schová kurzor želvy, aby nerušil

    # Paleta barev (Cyan vibe)
    # Používáme hex kódy, protože jsou univerzální
    colors = ['cyan', '#00C8FF', 'white']

    # Hlavní smyčka vykreslování
    try:
        for i in range(300):
            # 1. Výběr barvy
            t.color(colors[i % 3])
            
            # 2. Nastavení tloušťky (puls efekt)
            t.width(i % 9 + 1)
            
            # 3. Pohyb
            t.forward(i * 2)
            
            # 4. Rotace
            # 58 stupňů vytváří ten specifický spirálový vzor
            t.left(58) 
            
    except turtle.Terminator:
        # Ošetření chyby, pokud uživatel zavře okno během kreslení
        pass

    # Udrží okno otevřené, dokud na něj neklikneš
    screen.exitonclick()

if __name__ == "__main__":
    draw_neon_spiral()
